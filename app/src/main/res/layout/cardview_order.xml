<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/images"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:id="@+id/imagesOfHead"
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/images"
                app:layout_constraintLeft_toLeftOf="@id/images"
                app:layout_constraintRight_toRightOf="@id/images"
                android:src="@drawable/kepala1_grey"
                />

            <ImageView
                android:id="@+id/imagesOfbody"
                android:layout_width="40dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/imagesOfHead"
                app:layout_constraintLeft_toLeftOf="@id/images"
                app:layout_constraintRight_toRightOf="@id/images"
                android:src="@drawable/badan1_grey"
                />

            <ImageView
                android:id="@+id/imagesOflefthand"
                android:layout_width="30dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/imagesOfHead"

                app:layout_constraintRight_toLeftOf="@id/imagesOfbody"
                android:src="@drawable/tangan1_grey"
                />

            <ImageView
                android:id="@+id/imagesOfrighthand"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:scaleX="-1"
                app:layout_constraintTop_toBottomOf="@id/imagesOfHead"
                app:layout_constraintLeft_toRightOf="@id/imagesOfbody"
                android:src="@drawable/tangan1_grey"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_quantity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/images"
            android:textSize="30sp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_order"
            app:layout_constraintLeft_toRightOf="@id/images"
            app:layout_constraintTop_toBottomOf="@id/order_quantity"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_order"
            app:layout_constraintLeft_toRightOf="@id/images"
            app:layout_constraintTop_toBottomOf="@id/address_order"
            android:layout_marginLeft="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pay_button"
            android:text="Pay"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_order_button"
            android:text="cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pay_button"
            android:layout_marginTop="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>