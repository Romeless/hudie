<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/images"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:id="@+id/imagesOfHead"
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/images"
                app:layout_constraintLeft_toLeftOf="@id/images"
                app:layout_constraintRight_toRightOf="@id/images"
                android:src="@drawable/kepala1_grey"
                />

            <ImageView
                android:id="@+id/imagesOfbody"
                android:layout_width="40dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/imagesOfHead"
                app:layout_constraintLeft_toLeftOf="@id/images"
                app:layout_constraintRight_toRightOf="@id/images"
                android:src="@drawable/badan1_grey"
                />

            <ImageView
                android:id="@+id/imagesOflefthand"
                android:layout_width="30dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/imagesOfHead"

                app:layout_constraintRight_toLeftOf="@id/imagesOfbody"
                android:src="@drawable/tangan1_grey"
                />

            <ImageView
                android:id="@+id/imagesOfrighthand"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:scaleX="-1"
                app:layout_constraintTop_toBottomOf="@id/imagesOfHead"
                app:layout_constraintLeft_toRightOf="@id/imagesOfbody"
                android:src="@drawable/tangan1_grey"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_order"
            android:text="address"
            app:layout_constraintLeft_toRightOf="@id/images"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_order"
            android:text="price"
            app:layout_constraintLeft_toRightOf="@id/images"
            app:layout_constraintTop_toBottomOf="@id/address_order"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_status"
            android:text="status"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_row"
            app:layout_constraintLeft_toRightOf="@id/images"
            android:textSize="11sp"
            android:layout_marginLeft="16dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/images"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal"
            android:id="@+id/bottom_row"
            android:paddingTop="10dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finish_button"
                android:text="Finish"
                app:layout_constraintRight_toLeftOf="@id/complain_order"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                android:background="@drawable/button_logout"
                android:backgroundTint="@color/royalblue"
                android:textColor="#ffffff"
                android:layout_marginRight="16dp"
                android:translationZ="2dp"
                android:elevation="2dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pay_button"
                android:text="Pay"
                android:background="@drawable/button_logout"
                android:backgroundTint="@color/royalblue"
                android:textColor="#ffffff"
                app:layout_constraintRight_toLeftOf="@id/cancel_order_button"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="16dp"
                android:translationZ="2dp"
                android:elevation="2dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/complain_order"
                android:text="Complain"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                android:backgroundTint="@color/warning"
                android:background="@drawable/button_logout"

                android:textColor="#ffffff"
                android:translationZ="2dp"
                android:elevation="2dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_order_button"
                android:text="Cancel"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="@color/error"
                android:background="@drawable/button_logout"

                android:textColor="#ffffff"
                android:translationZ="2dp"
                android:elevation="2dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="#dddddd" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>