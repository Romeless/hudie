<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.design.DesignFragment"
    android:background="@color/whitesmoke"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagesOfHead"
            android:layout_width="300dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="@id/images"
            app:layout_constraintLeft_toLeftOf="@id/images"
            app:layout_constraintRight_toRightOf="@id/images"
            android:src="@drawable/kepala1_grey"
            />

        <ImageView
            android:id="@+id/imagesOfbody"
            android:layout_width="120dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@id/imagesOfHead"
            app:layout_constraintLeft_toLeftOf="@id/images"
            app:layout_constraintRight_toRightOf="@id/images"
            android:src="@drawable/badan1_grey"
            />

        <ImageView
            android:id="@+id/imagesOflefthand"
            android:layout_width="90dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@id/imagesOfHead"

            app:layout_constraintRight_toLeftOf="@id/imagesOfbody"
            android:src="@drawable/tangan1_grey"
            />
        <ImageView
            android:id="@+id/imagesOfrighthand"
            android:layout_width="90dp"
            android:layout_height="180dp"
            android:scaleX="-1"
            app:layout_constraintTop_toBottomOf="@id/imagesOfHead"
            app:layout_constraintLeft_toRightOf="@id/imagesOfbody"
            android:src="@drawable/tangan1_grey"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintVertical_weight="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/images"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/images">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size" />


            <RadioGroup
                android:id="@+id/size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checkedButton="@id/s"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="S" />

                <RadioButton
                    android:id="@+id/m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="M" />

                <RadioButton
                    android:id="@+id/l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="L" />

                <RadioButton
                    android:id="@+id/xl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="XL" />

                <RadioButton
                    android:id="@+id/xxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="2XL" />

                <RadioButton
                    android:id="@+id/xxxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="3XL" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="40dp"
                android:background="#dddddd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Color" />

            <RadioGroup
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="20dp"
                android:checkedButton="@id/navy">

                <RadioButton
                    android:id="@+id/navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Navy" />

                <RadioButton
                    android:id="@+id/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Grey" />

                <RadioButton
                    android:id="@+id/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Black" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="40dp"
                android:background="#dddddd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Kepala" />

            <RadioGroup
                android:id="@+id/kepala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="20dp"
                android:checkedButton="@id/kepala1">

                <RadioButton
                    android:id="@+id/kepala1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Type 1" />

                <RadioButton
                    android:id="@+id/kepala2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="type 2" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="40dp"
                android:background="#dddddd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Tangan" />

            <RadioGroup
                android:id="@+id/tangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="20dp"
                android:checkedButton="@id/tangan1">

                <RadioButton
                    android:id="@+id/tangan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Type 1" />

                <RadioButton
                    android:id="@+id/tangan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="type 2" />

                <RadioButton
                    android:id="@+id/tangan3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="type 3" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="40dp"
                android:background="#dddddd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Badan" />

            <RadioGroup
                android:id="@+id/badan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="20dp"
                android:checkedButton="@id/badan1">

                <RadioButton
                    android:id="@+id/badan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Type 1" />

                <RadioButton
                    android:id="@+id/badan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="type 2" />

                />
            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit_design"
                android:padding="20px"
                android:text="Save Design"
                android:layout_margin="40dp"
                />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>