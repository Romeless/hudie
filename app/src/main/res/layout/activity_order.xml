<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.design.DesignFragment"
    android:background="@color/whitesmoke">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagesOfHead"
            android:layout_width="300dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="@id/images"
            app:layout_constraintLeft_toLeftOf="@id/images"
            app:layout_constraintRight_toRightOf="@id/images"
            android:src="@drawable/kepala1_grey"
            />

        <ImageView
            android:id="@+id/imagesOfbody"
            android:layout_width="120dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@id/imagesOfHead"
            app:layout_constraintLeft_toLeftOf="@id/images"
            app:layout_constraintRight_toRightOf="@id/images"
            android:src="@drawable/badan1_grey"
            />

        <ImageView
            android:id="@+id/imagesOflefthand"
            android:layout_width="90dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@id/imagesOfHead"

            app:layout_constraintRight_toLeftOf="@id/imagesOfbody"
            android:src="@drawable/tangan1_grey"
            />

        <ImageView
            android:id="@+id/imagesOfrighthand"
            android:layout_width="90dp"
            android:layout_height="180dp"
            android:scaleX="-1"
            app:layout_constraintTop_toBottomOf="@id/imagesOfHead"
            app:layout_constraintLeft_toRightOf="@id/imagesOfbody"
            android:src="@drawable/tangan1_grey"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/images"
        app:layout_constraintVertical_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/whitesmoke"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/images">

            <TextView
                android:id="@+id/design_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/design_name_input"
                android:text="Nama Design"
                android:textSize="24sp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#444444"
                android:textColorHint="#777777"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/emailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Email:"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/emailBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="account@email.com"
                        android:textSize="12sp"
                        android:textAlignment="viewEnd"
                        app:layout_constraintLeft_toRightOf="@id/email"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/email"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/emailLayout">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Alamat:"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/addressBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:hint="Alamat Kirim"
                        android:lines="1"
                        android:maxLength="250"
                        android:maxLines="1"
                        app:layout_constraintLeft_toRightOf="@id/address"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/address"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/phoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/addressLayout">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Phone:"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/phoneBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:hint="Nomor HP Aktif"
                        android:maxLength="15"
                        app:layout_constraintLeft_toRightOf="@id/phone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/phone"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/qtyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/phoneLayout">

                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:text="Kuantitas:"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/qtyBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:text="1"
                        app:layout_constraintLeft_toRightOf="@id/qty"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/qty"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/priceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/qtyLayout"
                    >

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="Harga Total:"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/priceBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textAlignment="viewEnd"
                        app:layout_constraintLeft_toRightOf="@id/price"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/price"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Informasi Tambahan"/>

            <Button
                android:id="@+id/make_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat Order"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>