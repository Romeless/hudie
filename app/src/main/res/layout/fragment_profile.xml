<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.profile.ProfileFragment"
    android:background="@color/whitesmoke"
    >

    <Button
        android:id="@+id/profile_button_page"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Profile"
        android:textColor="@color/whitesmoke"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_profile"
        />
    <Button
        android:id="@+id/profile_mydesign_page"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:text="My design"
        android:textColor="@color/whitesmoke"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_button_page"
        app:layout_constraintLeft_toLeftOf="@+id/profile_button_page"
        android:background="@drawable/button_mydesign"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/profile_myorder_page"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:text="My order"
        android:textColor="@color/whitesmoke"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_button_page"
        app:layout_constraintRight_toRightOf="@+id/profile_button_page"
        android:background="@drawable/button_myorder"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/logout_button_profile"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Logout"
        android:textColor="@color/whitesmoke"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_myorder_page"
        app:layout_constraintRight_toRightOf="@+id/profile_button_page"
        app:layout_constraintLeft_toLeftOf="@id/profile_button_page"
        android:background="@drawable/button_myorder"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>