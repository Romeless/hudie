<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.profile.ProfileFragment"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/username_profile_container"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:translationZ="2dp"
        android:elevation="0dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/username_profile"
            android:textAlignment="center"
            android:textColor="@color/onColorPrimary"
            android:textSize="32sp"
            android:text="Fullname of User"
            />
    </LinearLayout>

    <Button
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:id="@+id/profile_button_page"
        android:padding="10dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:backgroundTint="#ffffff"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationZ="3dp"
        android:elevation="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/username_profile_container" />
    <LinearLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile_button_page"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:translationZ="2dp"
        android:elevation="0dp"
        android:orientation="horizontal"
        android:background="@drawable/button_transparent"
        >
        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:drawableTop="@drawable/ic_baseline_palette_24"
            android:id="@+id/profile_mydesign_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My design"
            android:textColor="#111111"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/profile_button_page"
            app:layout_constraintLeft_toLeftOf="@+id/profile_button_page"
            android:backgroundTint="#ffffff"
            />
        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:drawableTop="@drawable/ic_baseline_shopping_bag_24"
            android:id="@+id/profile_myorder_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My order"
            android:textColor="#111111"
            android:textSize="11sp"
            app:layout_constraintTop_toBottomOf="@+id/profile_button_page"
            app:layout_constraintRight_toRightOf="@+id/profile_button_page"
            android:backgroundTint="#ffffff"
            />
    </LinearLayout>
    <Button
        android:id="@+id/logout_button_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log - out"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/profile_button_page"
        app:layout_constraintLeft_toLeftOf="@id/profile_button_page"
        android:background="@drawable/button_logout"
        android:layout_marginBottom="80dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>